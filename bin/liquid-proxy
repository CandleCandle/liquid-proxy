#!/usr/bin/env ruby

$: << File.expand_path('../../lib', __FILE__)

require 'em-proxy'
require 'liquid-proxy/connection'

LIQUID_PROXY_PORT = ARGV[0] || 8998
HEADERS_TO_INJECT = {}

Proxy.start(:host => 'localhost', :port => LIQUID_PROXY_PORT, :debug => true) do |conn|
  LiquidProxy::Connection.setup(conn)
end
